replicaCount: 2

spoImage:
  registry: gcr.io
  repository: k8s-staging-sp-operator/security-profiles-operator
  tag: v0.8.4

enableSelinux: false
enableLogEnricher: false
enableAppArmor: true
enableBpfRecorder: false
enableProfiling: false
verbosity: 0

resources:
  limits:
    memory: 2Gi
  requests:
    cpu: 500m
    memory: 2Gi

daemon:
  tolerations:
  - operator: Exists

tolerations:
- key: node-role.kubernetes.io/master
  effect: NoSchedule
- key: CriticalAddonsOnly
  operator: "Exists"
- operator: "Exists"
  effect: NoExecute
- operator: "Exists"
  effect: NoSchedule
